                                xtype: 'datefield',
                                fieldLabel: 'Start Date',
                                width: 170,
                                format: 'd-M-Y',
                                labelAlign: 'top',
                                itemId: window.feature.modalStartDateId,
                                value: startDateOverviewCombobox.getValue(),
                                listeners: {
                                    select: function (t, n, o) {
