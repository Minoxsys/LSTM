                                        window.feature.chartStore.load();
                                        window.feature.symptomsStore.proxy.extraParams.endDate = date;
                                        window.feature.symptomsStore.load();
                                    },
                                    specialkey: function (field, e) {
                                        if (e.getKey() == e.BACKSPACE || e.getKey() == e.DELETE) {
