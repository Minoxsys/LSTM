<script type="text/javascript">
    window.res.content.maincontent = {
        id: 'MainContent',
        sidebar: {
            id: 'SideBar',
            group: 'SideBarGroup',
            serviceneeded: 'Sidebar-ServiceAdministration-ServiceNeeded-Button',
            diagnosis: 'Sidebar-ServiceAdministration-Diagnosis-Button',
            treatment: 'Sidebar-ServiceAdministration-Treatment-Button',
            advice: 'Sidebar-ServiceAdministration-Advice-Button'
        }
    };
    Ext.onReady(function () {

        var contentRes = window.res.content;

        var content = Ext.getCmp(contentRes.id);

        content.add(
            {
                xtype: 'container',
                layout: {
                    align: 'stretch',
                    type: 'hbox'
                },
                items: [
                     {
                         xtype: 'container',
                         id: contentRes.maincontent.id,
                         layout: {
                             align: 'stretch',
                             type: 'fit'
                         },
                         flex: 1
                     },
                    {
                        xtype: 'container',
                        id: 'SideBar',
                        width: 260,
                        layout: {
                            align: 'stretch',
                            type: 'vbox'
                        },
                        items: [
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.serviceneeded,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                text: 'Symptom',
                                margin: '45 50 0 0',
                                height: 30,
                                ui: 'snapshot-sidebar-btn',
                                handler: function () {
                                    navigateTo(window.res.link.serviceneeded);
                                }
                            },
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.diagnosis,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                text: 'Diagnosis',
                                margin: '0 50 0 0',
                                height: 30,
                                ui: 'snapshot-sidebar-btn',
                                handler: function () {
                                    navigateTo(window.res.link.diagnosis);
                                }
                            },
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.treatment,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                text: 'Treatment',
                                height: 30,
                                enableToggle: true,
                                margin: '0 50 0 0',
                                ui: 'snapshot-sidebar-btn',
                                handler: function () {
                                    navigateTo(window.res.link.treatment);
                                }
                            },
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.advice,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                text: 'Advice',
                                height: 30,
                                enableToggle: true,
                                margin: '0 50 0 0',
                                ui: 'snapshot-sidebar-btn',
                                handler: function () {
                                    navigateTo(window.res.link.advice);
                                }

                            }
                        ]
                    }

                ]

            }
        );

    });
</script>
